<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ELMSController"
      alignment="center" spacing="10"
      styleClass="root"
      prefWidth="1280"
      prefHeight="720"
      maxHeight="720">
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="h1">
        <ImageView> 
            <image>
                <Image url="@logo_scaled.png"/>
            </image> 
        </ImageView>
        <Label styleClass="h1" text="Welcome to the eLibrary!"/>
    </HBox>
    <VBox spacing="10" alignment="CENTER" prefHeight="410">
        <HBox spacing="50" alignment="CENTER">
            <Button text="View eLibrary" onAction="#handleLibBtn" styleClass="menuButton" prefWidth="150" />
            <Button text="View Account" onAction="#handleAccBtn" styleClass="menuButton" prefWidth="150" />
        </HBox>
    </VBox> 
    <HBox spacing="10" alignment="BOTTOM_CENTER">
        <Button text="Exit eLibrary" onAction="#handleExitBtn" styleClass="button" prefWidth="150" />
    </HBox>
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>
</VBox>
