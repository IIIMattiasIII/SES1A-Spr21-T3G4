<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing = "10" alignment = "center" xmlns:fx = "http://javafx.com/fxml/1" fx:controller = "controller.SearchByGenre">
    
    <Label styleClass="h1" text = "Search By Genre:"/>
    <GridPane alignment = "center" hgap = "10" vgap = "10">
     <Label text = "Genre" GridPane.columnIndex = "1" GridPane.rowIndex = "0" />
     <TextField fx:id = "bookGenre" GridPane.columnIndex = "2" GridPane.rowIndex = "0"/>
    </GridPane>
    <ListView fx:id = "List" prefWidth = "300" prefHeight = "500">  
        <placeholder>
            <Label text = "No Books"/>
         </placeholder>
     </ListView>  
    <stylesheets>
        <URL value = "@styles.css"/>
    </stylesheets>
        
         <Button fx:id = "button" text = "Search" onAction = "#setList"/>
      
    
   
    
    
</VBox>

